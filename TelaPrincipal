#include <stdio.h>
#include <stdlib.h>

void compraVista(){
	
	int saida = 0;
	do{
		
		printf("-------------------\n");
		printf(" COMPRA A VISTA \n");
		printf("-------------------\n");
		
		printf("Informe se deseja sair: [1-Sim ou 0-Nao]: ");
		scanf("%d",&saida);
		
	}while(saida==0);
	
}	
	
